<extension type="module" method="upgrade" client="site">
	<name>MOD_RAVE_PAYMENT_FORMS</name>
	<creationDate>Jan 2017</creationDate>
	<author>Olatunbosun Olanrewaju</author>
	<authorEmail>bosunolanrewaju@gmail.com</authorEmail>
	<authorUrl>https://twitter.com/bosunolanrewaju</authorUrl>
	<copyright>Copyright © 2017 - All rights reserved.</copyright>
	<license>GNU General Public License v2.0</license>
	<version>0.0.2</version>
	<description>MOD_RAVE_PAYMENT_FORMS_DESCRIPTION</description>
	<files>
		<filename module="mod_rave_payment_forms">mod_rave_payment_forms.php</filename>
		<filename>mod_rave_payment_forms.xml</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>language</folder>
		<folder>tmpl</folder>
		<folder>assets</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" label="MOD_BASIC" description="MOD_BASIC_SETTINGS">
				<field type="text" label="MOD_PUBLIC_KEY" name="public_key" description="MOD_YOUR_RAVE_INTEGRATION_PUBLIC" default="" class="" size="32" filter="" required="true" />
				<field type="text" label="MOD_MODAL_TITLE" name="modal_title" description="MOD_PAY_MODAL_TITLE__DEFAULT__FL" default="" class="" size="32" filter="" />
				<field type="text" label="MOD_MODAL_DESCRIPTION" name="modal_desc" description="MOD_PAY_MODAL_DESCRIPTION__DEFAU" default="" class="" size="32" filter="" />
				<field type="file" label="MOD_MODAL_LOGO" name="modal_logo" description="MOD_MODAL_LOGO_DESCRIPTION" default="" accept="image/*" />
				<field type="text" label="MOD_SUCCESS_URL" name="success_url" description="MOD_THE_URL_OF_THE_PAGE_TO_REDIR" default="" class="" size="32" filter="" />
				<field type="text" label="MOD_FAILURE_URL" name="failed_url" description="MOD_THE_URL_OF_THE_PAGE_TO_REDIR_DESCRIPTION" default="" class="" size="32" filter="" />
				<field type="text" label="MOD_BUTTON_TEXT" name="button_text" description="MOD_THE_TEXT_ON_THE_PAY_BUTTON__" default="" class="" size="32" filter="" />
			</fieldset>

			<fieldset
				name="advanced">
				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				<field
					name="moduleclass_sfx"
					type="textarea" rows="3"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>

				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="static">
					<option
						value="static"></option>
				</field>
			</fieldset>
		</fields>
	</config>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.mod_rave_payment_forms.sys.ini</language>
		<language tag="en-GB">en-GB/en-GB.mod_rave_payment_forms.ini</language>
	</languages>
</extension>
